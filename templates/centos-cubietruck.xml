<template>    
    <board>cubietruck</board>
    <image size="3G" type="raw" path="CentOS-7-core-cubietruck.img"></image>
    <partitions>
        <partition size="300M" type="primary" fs="ext3" mountpoint="/boot"></partition>
        <partition size="512M" type="primary" fs="swap" mountpoint="swap"></partition>
        <partition size="2G" type="primary" fs="ext4" mountpoint="/"></partition>
    </partitions>
    
    <packages>
        <installer>yum</installer>
        <releasever>7</releasever>
        <group>core</group>
        <package>net-tools,rootfs-resize</package>
    </packages>

    <stage1loader>none</stage1loader>
    <uboot>files/cubietruck/u-boot-sunxi-with-spl.bin</uboot>
    <rootfiles>none</rootfiles>
    <firmware>none</firmware>
    <kernel type="stock">
    </kernel>    

    <config>
        <hostname>cubietruck</hostname>
        <selinux>permissive</selinux>
        <rootpass>centos</rootpass>
        <rootsshkey>none</rootsshkey>
        <network>
            <interface name="eth0" config="dhcp">
            </interface>
        </network>        
    </config>
    
    <etcoverlay>./etc</etcoverlay>
    <finalizescript>./boards.d/finalize.sh</finalizescript>
    
    <distro>centos</distro>
    <repos>
        <repo name="centos-base" path="http://armv7.dev.centos.org/repos/7/tosign/os/armhfp/"></repo>
        <repo name="centos-extras" path="http://armv7.dev.centos.org/repos/7/extras/armhfp/"></repo>
        <repo name="centos-arm-kernels" path="http://armv7.dev.centos.org/repos/7/kernel/armhfp/kernel-4.2.3/"></repo>
    </repos>
    <workdir>/tmp/temp</workdir>
    <extlinuxconf>true</extlinuxconf>
    
 </template>
 
